.sidebar
  font-size: 1rem
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  z-index: 10
  -webkit-overflow-scrolling: touch
  transition: transform 0s linear
  &--hidden
    transform: translateX(-100%)
    transition: transform 0s .2s linear
    .sidebar__content
      transform: translateX(-100%)
  &__hidden &__obfuscator
      display: none
      background: transparent
  &--hidden&--from-right
    transform: translateX(100%)
    .sidebar__content
      transform: translateX(100%)
  &__obfuscator
    content: ''
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: $overlay-background
    z-index: -1
    transition: background .2s ease-in-out
  &__content
    background: $color-white
    position: absolute
    top: 0
    left: 0
    bottom: 0
    width: 100%
    transition: transform .2s ease-in-out
    @media (min-width: 456px)
      width: emCalc(400px)
    &--slim
      @media (min-width: 306px)
        width: emCalc(250px)
  &--from-right &__content
    left: auto
    right: 0
