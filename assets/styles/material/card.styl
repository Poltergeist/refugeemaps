/*
 * A Material Design Card
 * Source: http://codepen.io/MattiaAstorino/pen/VYWxXy
 */
.card
  font-size: 1rem
  will-change: transform
  position: relative
  border-radius: 2px
  overflow:  hidden
  background-color: $color-white
  height: auto
  max-height: 40%
  width: emCalc(330px)
  max-width: 90%
  transition: all 400ms cubic-bezier(0.165, 0.840, 0.440, 1.000)
  shadow(3)

  &__text
    user-select: none
    display: block
    padding: emCalc(24px)
    margin: 0
    line-height: 1.6
    color: $color-grey
    overflow: hidden
    transition: width 200ms cubic-bezier(0.075, 0.820, 0.165, 1.000)
    transition: delay 0.1s

  &__action-bar
    user-select: none
    padding: emCalc(8px)
    height: emCalc(52px)
    text-align: right
    transition: left 200ms cubic-bezier(0.075, 0.820, 0.165, 1.000)
    font-size: 16px
    top: 50px
    .button
      margin-left: emCalc(8px)
