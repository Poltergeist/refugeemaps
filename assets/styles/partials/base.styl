/**
 * Basics
 */

*, *:before, *:after
  box-sizing: border-box

html, body
  font-family: 'Roboto', sans-serif
  font-size: 100%
  font-weight: 400
  line-height: 1.333
  color: $color-black
  height: 100%
  width: 100%
  overflow: hidden

h1, h2, h3, h4
  margin: 0

ul
  list-style: none
  margin: 0
  padding: 0

.overlay
  font-size: 1rem
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: $overlay-background
  z-index: 5
  &--hidden
    display: none
  &__content
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

.icon
  font-size: 1rem
  width: emCalc(24px)
  height: emCalc(24px)
