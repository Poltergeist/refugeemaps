/**
 * The filters sidebar
 */
.filters
  font-size: 1rem
  &--rtl
    direction: rtl
    .filter__text
      margin: 0 emCalc(10px) 0 0
  &__content
    &__header
      position: absolute
      top: 0
      left: 0
      right: 0
      shadow(1)

.filter-select
  height: 100%
  padding-top: $toolbar-height + emCalc(8px)
  padding-bottom: emCalc(8px)
  overflow-y: auto
  overflow-x: hidden
