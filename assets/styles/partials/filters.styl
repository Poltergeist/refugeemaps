/**
 * The filters sidebar
 */
$filters-header-height = emCalc(56px)

.filters
  font-size: 1rem
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  z-index: 1
  -webkit-overflow-scrolling: touch
  transition: transform 0s linear
  &--hidden
    transform: translateX(100%)
    transition: transform 0s .2s linear
    .filters__content
      transform: translateX(100%)
    &:before
      display: none
      background: transparent
  &--rtl
    direction: rtl
    .filter__text
      margin: 0 emCalc(10px) 0 0
  &:before
    content: ''
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: $overlay-background
    z-index: -1
    transition: background .2s ease-in-out
  &__content
    background: $color-white
    position: absolute
    top: 0
    right: 0
    bottom: 0
    width: 100%
    max-width: emCalc(400px)
    transition: transform .2s ease-in-out
    &__header
      height: $filters-header-height
      line-height: $filters-header-height
      color: $color-white
      background: $color-blue
      position: absolute
      top: 0
      left: 0
      right: 0
      shadow(1)
      &__title
        font-size: emCalc(20px)
        display: inline-block
        font-weight: 400
        padding: 0 emCalc(16px, 20) 0 emCalc(72px, 20)
      &__back
        font-size: 1rem
        position: absolute
        top: 0
        left: 0
        width: $filters-header-height - emCalc(8px)
        height: $filters-header-height - emCalc(8px)
        line-height: $filters-header-height - emCalc(8px)
        margin: emCalc(4px)
        .icon
          fill: $color-white
    &__body
      height: 100%
      padding-top: $filters-header-height
      overflow-y: auto
      overflow-x: hidden

.filter
  padding: emCalc(10px)
  cursor: pointer
  &--active
    background: #444
    color: #fff
  &:hover
    background: #444
    color: #fff
  &__image
    vertical-align: middle
    width: emCalc(30px)
  &__text
    margin-left: emCalc(10px)
    vertical-align: middle
